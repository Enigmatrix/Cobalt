{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cobalt",
  "version": "0.5.0",
  "identifier": "com.cobalt.enigmatrix",
  "build": {
    "frontendDist": "../build/client",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Cobalt",
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
