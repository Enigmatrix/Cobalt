<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Cobalt.App"
             xmlns:fluentStyle="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:converters="clr-namespace:Cobalt.Converters"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <fluentStyle:FluentAvaloniaTheme />
    </Application.Styles>
    <Application.Resources>
        <converters:BytesToImageConverter x:Key="BytesToImageConverter" />
        <converters:ColorStringToBrushConverter x:Key="ColorStringToBrushConverter" />
        <converters:HumanizeTimeSpanConverter x:Key="HumanizeTimeSpanConverter" />
        <converters:IsEqualConverter x:Key="IsEqualConverter" />
    </Application.Resources>
</Application>