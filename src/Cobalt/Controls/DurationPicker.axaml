<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Cobalt.Controls"
        xmlns:fluent="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia">
    <Design.PreviewWith>
        <controls:DurationPicker />
    </Design.PreviewWith>

    <Style Selector="controls|DurationPicker">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Width="200" Height="50">
                    <fluent:FABorder VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="4">
                        <TextBox Name="PART_DurationTextBox" IsVisible="False" />

                    </fluent:FABorder>
                    <Button Name="PART_DurationDisplay" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>